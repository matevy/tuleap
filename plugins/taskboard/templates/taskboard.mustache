<div class="taskboard-root">
    {{# milestone_presenter }}
    <h1 class="tlp-framed-horizontally taskboard-root-title">
        <div class="tlp-dropdown">
            <div id="agiledashboard-scrum-milestone-menu">
                {{ milestoneTitle }}
                <i class="fa fa-fw fa-caret-down" id="agiledashboard-scrum-milestone-menu-caret"></i>
            </div>
            <div class="tlp-dropdown-menu" role="menu">
                <a href="{{ editArtifactUrl }}"
                   class="backlog-item-link tlp-dropdown-menu-item"
                   data-artifact-id="{{ milestoneId }}"
                   role="menuitem"
                >
                    {{ editArtifact }}
                </a>
            </div>
        </div>
        {{# displayMilestoneDates }}
            <small>
                {{startDate}} â€“ {{endDate}}
            </small>
        {{/ displayMilestoneDates }}
    </h1>

    <nav class="tlp-tabs taskboard-root-tabs">
        {{# getPaneInfoList }}
            <a href="{{ getUri }}" class="tlp-tab {{# isActive }}tlp-tab-active{{/ isActive }}">
                {{{ getTitle }}}
                {{# isExternalLink }}
                    <i class="fa fa-external-link tlp-tab-icon"></i>
                {{/ isExternalLink }}
            </a>
        {{/ getPaneInfoList }}
        <a href="/plugins/tracker/?aid={{ milestoneId }}" class="tlp-tab">
        {{ artifact }}
        <i class="fa fa-external-link tlp-tab-icon"></i>
        </a>
    </nav>
    {{/ milestone_presenter }}

    {{# is_ie_11 }}
    <div class="empty-page">
        <p class="empty-page-text">
            {{# dgettext }}tuleap-taskboard | Your browser is not compatible with Taskboard application{{/ dgettext }}
        </p>
    </div>
    {{/ is_ie_11 }}
    {{^ is_ie_11 }}
    <div id="taskboard"
         data-user-is-admin="{{ user_is_admin }}"
         data-admin-url="{{ admin_url }}"
         data-columns="{{ json_encoded_columns }}"
         data-trackers="{{ json_encoded_trackers }}"
         data-has-content="{{ has_content }}"
         data-milestone-id="{{# milestone_presenter }}{{ milestoneId }}{{/milestone_presenter}}"
         data-milestone-title="{{# milestone_presenter }}{{ milestoneTitle }}{{/ milestone_presenter }}"
         data-are-closed-items-displayed="{{ are_closed_items_displayed }}"
    ></div>
    {{/ is_ie_11 }}

</div>
