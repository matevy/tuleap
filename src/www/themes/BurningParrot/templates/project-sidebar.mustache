<a href="{{ project_link }}" class="project-sidebar-title" title="{{{ project_privacy }}}">
    {{# are_restricted_users_allowed }}
        {{# project_is_public }}
            <i class="fa fa-unlock project-sidebar-title-icon"></i>
        {{/ project_is_public }}
        {{# project_is_public_incl_restricted }}
            <i class="fa fa-tlp-unlock-plus-r project-sidebar-title-icon"></i>
        {{/ project_is_public_incl_restricted }}
        {{# project_is_private }}
            <i class="fa fa-lock project-sidebar-title-icon"></i>
        {{/ project_is_private }}
        {{# project_is_private_incl_restricted }}
            <i class="fa fa-tlp-lock-plus-r project-sidebar-title-icon"></i>
        {{/ project_is_private_incl_restricted }}
    {{/ are_restricted_users_allowed }}
    {{^ are_restricted_users_allowed }}
        {{# project_is_public }}
            <i class="fa fa-unlock project-sidebar-title-icon"></i>
        {{/ project_is_public }}
        {{^ project_is_public }}
            <i class="fa fa-lock project-sidebar-title-icon"></i>
        {{/ project_is_public }}
    {{/ are_restricted_users_allowed }}

    {{ project_name }}
</a>

<nav class="project-sidebar-nav" data-test="project-sidebar" data-project-id="{{ project_id }}">
    {{# sidebar }}
            {{# is_project_defined }}
                <a href="{{{ link }}}"
                   aria-label="{{ label }}"
                   class="project-sidebar-nav-item"
                   {{# open_in_new_tab }}
                   target="_blank"
                   rel="noopener noreferrer"
                   {{/ open_in_new_tab }}
                   title="{{ description }}"
                >
                    <i class="{{ icon }} project-sidebar-nav-item-icon"></i>
                    <span class="project-sidebar-nav-item-label">{{ label }}</span>
                    {{# open_in_new_tab }}
                        <i class="fa fa-arrow-right project-sidebar-nav-item-new-tab"></i>
                    {{/ open_in_new_tab }}
                </a>
            {{/ is_project_defined }}
            {{^ is_project_defined }}
                <a id="{{ id }}"
                    href="{{{ link }}}"
                    class="project-sidebar-nav-item {{# enabled }}active{{/ enabled }}"
                    aria-label="{{{ name }}}"
                    title="{{{ name }}}"
                >
                    <i class="{{ icon }} project-sidebar-nav-item-icon"></i>
                    <span class="project-sidebar-nav-item-label">{{{ label }}}</span>
                </a>
            {{/ is_project_defined }}
    {{/ sidebar }}
</nav>

{{# is_sidebar_collapsable }}
    <i class="sidebar-collapser project-sidebar-collapser-icon sidebar-collapser-icon fa"
        title="Collapse sidebar"
        data-user-preference-name="sidebar_state"
        data-collapsed-class="sidebar-collapsed"
    ></i>
{{/ is_sidebar_collapsable }}
