<div class="project-sidebar-header">
    <div class="project-sidebar-header-name">
        {{# privacy }}
            <a href="{{ project_link }}" class="project-sidebar-title">
                {{# are_restricted_users_allowed }}
                    {{# project_is_public }}
                        <i class="fas fa-lock-open project-sidebar-title-icon" data-test="project-icon"></i>
                    {{/ project_is_public }}
                    {{# project_is_public_incl_restricted }}
                        <i class="fas fa-tlp-unlock-plus-r project-sidebar-title-icon" data-test="project-icon"></i>
                    {{/ project_is_public_incl_restricted }}
                    {{# project_is_private }}
                        <i class="fas fa-lock project-sidebar-title-icon" data-test="project-icon"></i>
                    {{/ project_is_private }}
                    {{# project_is_private_incl_restricted }}
                        <i class="fas fa-tlp-lock-plus-r project-sidebar-title-icon" data-test="project-icon"></i>
                    {{/ project_is_private_incl_restricted }}
                {{/ are_restricted_users_allowed }}
                {{^ are_restricted_users_allowed }}
                    {{# project_is_public }}
                        <i class="fas fa-lock-open project-sidebar-title-icon" data-test="project-icon"></i>
                    {{/ project_is_public }}
                    {{^ project_is_public }}
                        <i class="fas fa-lock project-sidebar-title-icon" data-test="project-icon"></i>
                    {{/ project_is_public }}
                {{/ are_restricted_users_allowed }}

                {{ project_name }}
            </a>
        {{/ privacy }}

        {{# has_project_banner }}
            <span id="current-project-banner-bullhorn" class="project-sidebar-banner-button">
                <a href="#" aria-labelledby="current-project-banner-message"><i class="fa fa-bullhorn" aria-hidden="true"></i></a>
            </span>
        {{/ has_project_banner }}
    </div>
    {{# has_project_flags }}
        <div class="project-sidebar-project-flags" id="project-sidebar-project-flags">
            <div class="project-sidebar-project-flags-icon">
                {{# glyph }}project-shield{{/ glyph }}
            </div>
            <span class="project-sidebar-project-flags-labels">
                {{# project_flags }}
                    <span class="project-sidebar-project-flags-label">{{ label }}</span>
                {{/ project_flags }}
            </span>
        </div>
    {{/ has_project_flags }}
</div>

<nav class="project-sidebar-nav" data-test="project-sidebar" data-project-id="{{ project_id }}">
    {{# sidebar }}
            {{# is_project_defined }}
                <a href="{{{ link }}}"
                   aria-label="{{ label }}"
                   class="project-sidebar-nav-item"
                   {{# open_in_new_tab }}
                   target="_blank"
                   rel="noopener noreferrer"
                   {{/ open_in_new_tab }}
                   title="{{ description }}"
                >
                    <i class="{{ icon }} project-sidebar-nav-item-icon"></i>
                    <span class="project-sidebar-nav-item-label">{{ label }}</span>
                    {{# open_in_new_tab }}
                        <i class="fa fa-arrow-right project-sidebar-nav-item-new-tab"></i>
                    {{/ open_in_new_tab }}
                </a>
            {{/ is_project_defined }}
            {{^ is_project_defined }}
                <a id="{{ id }}"
                    href="{{{ link }}}"
                    class="project-sidebar-nav-item {{# enabled }}active{{/ enabled }}"
                    aria-label="{{{ name }}}"
                    title="{{{ name }}}"
                >
                    <i class="{{ icon }} project-sidebar-nav-item-icon"></i>
                    <span class="project-sidebar-nav-item-label">{{{ label }}}</span>
                </a>
            {{/ is_project_defined }}
    {{/ sidebar }}
</nav>

{{# is_sidebar_collapsable }}
    <i class="sidebar-collapser project-sidebar-collapser-icon sidebar-collapser-icon fa"
        title="Collapse sidebar"
        data-user-preference-name="sidebar_state"
        data-collapsed-class="sidebar-collapsed"
    ></i>
{{/ is_sidebar_collapsable }}
