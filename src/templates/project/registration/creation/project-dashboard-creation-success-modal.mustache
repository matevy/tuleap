{{# project_presenter }}
    <div id="project-creation-success-modal"
         class="tlp-modal tlp-modal-success"
         role="dialog"
         aria-labelledby="project-creation-success-modal">
        <div class="tlp-modal-body project-creation-success-modal-container">
            <div>
                {{> ../project/registration/creation/project-dashboard-creation-modal-svg }}
            </div>
            <div>
                <h2 class="tlp-text-success">{{#gettext}}Congratulations!{{/gettext}} </h2>
                <p class ="project-creation-success-modal-text">{{#gettext}}Welcome to your new project {{/gettext}} "{{name}}"</p>
                <button type="button" class="tlp-button-success tlp-modal-action" data-dismiss="modal">
                    {{#gettext}} Start working {{/gettext}}
                    <i class="fa fa-long-arrow-right project-creation-success-modal-icon"
                       aria-hidden="true">
                    </i>
                </button>
            </div>
        </div>
    </div>
{{/project_presenter}}
