<div class="empty-page">
    <div class="empty-page-illustration">
        {{> svg-locked-project }}
    </div>

    <div class="empty-page-text-with-small-text" data-test="error-user-is-restricted">
        {{# gettext }}You have a restricted user account.{{/ gettext }}
        <div class="empty-page-small-text">
            {{# gettext }}You may only have access to projects you are member of.{{/ gettext }}
        </div>
    </div>

    <div>
        <button type="button"
                class="tlp-button-primary tlp-button-large"
                data-target="join-project-modal"
                id="button-ask-to-join"
                data-modal-id="join-project-modal"
        >
            <i class="fas fa-long-arrow-alt-right tlp-button-icon"></i> {{# gettext }}Ask to join this project{{/ gettext }}
        </button>

        <a class="tlp-button-primary tlp-button-outline tlp-button-large error-back-to-homepage" href="/my/">
            <i class="fa fa-reply tlp-button-icon"></i> {{# gettext }}Go to my home page{{/ gettext }}
        </a>
    </div>
</div>

{{> join-project }}
