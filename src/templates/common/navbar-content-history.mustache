<div id="nav-dropdown-content-user-history-loading" class="shown"></div>
<div id="nav-dropdown-content-user-history-empty">
    <i class="fa fa-history empty-history-icon"></i>
    <p class="empty-history-description">{{ empty_history }}</p>
</div>
<div id="nav-dropdown-content-user-history-error-message-fetch">
    <div class="tlp-alert-danger">{{ error_fetch }}</div>
</div>
<div id="nav-dropdown-content-user-history-error-message-clear">
    <div class="tlp-alert-danger">{{ error_clear }}</div>
</div>
<div id="nav-dropdown-content-user-history-content" data-user-id="{{ current_user_id }}">
    <script id="history-item-placeholder" type="x-tmpl-mustache">
        {{=<% %>=}}
        {{# entries }}
            <a href="{{ html_url }}"
                class="history-item
                    {{ color_name }}
                    {{# has_quick_links }}history-item-with-quicklinks{{/ has_quick_links }}
                "
            >
                <div class="history-item-description">
                    {{# xref }}
                        <span class="history-item-description-badge badge tlp-badge-outline tlp-badge-{{ color_name }}">
                            {{ xref }}
                        </span>
                    {{/ xref }}
                    {{# icon_name }}
                        <i class="fa fa-fw {{ icon_name }} history-item-description-icon"></i>
                    {{/ icon_name }}
                    <span class="history-item-description-title">{{ title }}</span>
                </div>
                <span class="history-item-project">
                    <i class="fa fa-archive history-item-project-icon"></i>
                    {{ project.label }}
                </span>
                <div class="history-item-links">
                    {{# quick_links }}
                        <span class="history-item-extra-link history-item-links-link"
                            data-href="{{ html_url }}"
                            title="{{ name }}"
                            role="button"
                            tabindex="0"
                        >
                            <i class="fa {{ icon_name }}"></i>
                        </span>
                    {{/ quick_links }}
                </div>
            </a>
        {{/ entries }}
        <%={{ }}=%>
    </script>
</div>
<div id="nav-dropdown-content-user-history-clear">
    <button type="button" class="btn btn-large btn-primary tlp-button-primary" id="nav-dropdown-content-user-history-clear-button">
        <i class="fa fa-trash-o tlp-button-icon"></i>
        {{ clear_history }}
    </button>
</div>
